social:
  - { url: 'https://www.facebook.com/asmadai', title: 'Facebook', id: 'icon-facebook' }
  - { url: 'https://twitter.com/johnharrigan', title: 'Twitter', id: 'icon-twitter' }
  - { url: 'https://vimeo.com/johnharrigan', title: 'Vimeo', id: 'icon-vimeo' }
  - { url: 'http://www.harrigan.co/', title: 'Tumblr', id: 'icon-tumblr' }
  - { url: 'https://uk.linkedin.com/in/johnlharrigan', title: 'LinkedIn', id: 'icon-linkedin' }
  - { url: 'https://plus.google.com/+JohnHarrigan/posts', title: 'Google+', id: 'icon-googleplus' }
