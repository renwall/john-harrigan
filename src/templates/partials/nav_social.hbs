<nav class="social" role="navigation">
	<ul class="no-bullet">
	{{#each nav_social.social}}
		<li>
			<a href="{{{url}}}">
				<svg role="img" title="{{title}}" viewBox="0 0 64 64" class="icon">
					<use xlink:href="assets/icon-spritemap.svg#{{id}}"></use>
				</svg>	
			</a>
		</li>
	{{/each}}
	</ul>
</nav>	
